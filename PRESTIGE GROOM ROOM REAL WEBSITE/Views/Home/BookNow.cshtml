@{
    ViewData["Title"] = "Book Now";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/BookNowStylesheet.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <h3>Place A Booking</h3>

    <div class="container"> 
        @*changed the name of the controller to Home and replace the action method with MakeaBooking*@
        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="MakeaBooking">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Your name..">

            <label for="Haircut Style">Haircut Style</label>
            <select id="Time" name="Time">
                <option value="Razor Fade">Razor Fade - $30</option>
                <option value="Zero Fade">Zero Fade - $25</option>
                <option value="Hot Towel Shave">Hot Towel Shave - $25</option>
                <option value="Style Cut">Style Cut - $25</option>
                <option value="Scissor Cut">Scissor Cut - $25</option>
                <option value="Clipper Cut">Clipper Cut - $20</option>
                <option value="Beard Line Up">Beard Line Up - $10</option>
                <option value="Beard Trim">Beard Trim $10</option>
                <option value="Line Up">Line Up - $5</option>
                <option value="Design Line">Design Line - From $5</option>
            </select>

            <label for="email">Email</label>
            <input type="text" id="email" name="email" placeholder="Your Email.." required>

            <label for="Time">Time</label>
            <select id="Time" name="Time">
                <option value="9:00am">9:00am</option>
                <option value="9:30am">9:30am</option>
                <option value="10:30am">10:30am</option>
                <option value="11:00am">11:00am</option>
                <option value="11:30am">11:30am</option>
                <option value="12:00pm">12:00pm</option>
                <option value="12:30pm">12:30pm</option>
                <option value="1:00pm">1:00pm</option>
                <option value="1:30pm">1:30pm</option>
                <option value="2:00pm">2:00pm</option>
                <option value="2:30pm">2:30pm</option>
                <option value="3:00pm">3:00pm</option>
                <option value="3:30pm">3:30pm</option>
                <option value="4:00pm">4:00pm</option>
                <option value="4:30pm">4:30pm</option>
                <option value="5:00pm">5:00pm</option>
                <option value="5:30pm">5:30pm</option>
            </select>



            <input type="submit" value="Submit">
        </form>
    </div>

</body>
</html>